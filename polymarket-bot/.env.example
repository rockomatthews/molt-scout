# Polymarket CLOB
CLOB_HOST=https://clob.polymarket.com
CHAIN_ID=137

# Your signing key. If you used email login, export from https://reveal.magic.link/polymarket
# If you used a wallet login, use that wallet's private key (keep it secret!)
PRIVATE_KEY=

# Your Polymarket profile address (aka "funder" / depositor address)
FUNDER_ADDRESS=

# 0 = browser wallet signature, 1 = Magic/email login (common)
SIGNATURE_TYPE=1

# Optional: once derived, you can pin API creds instead of deriving every run
CLOB_API_KEY=
CLOB_API_SECRET=
CLOB_API_PASSPHRASE=

# Bot controls
DRY_RUN=true
MAX_TOTAL_USD=200
MAX_USD_PER_TRADE=25
EDGE_REQUIRED=0.01
POLL_MS=1500

# Market selection
# If empty, the bot will try to auto-pick some active orderbook markets.
MARKET_SLUGS=
